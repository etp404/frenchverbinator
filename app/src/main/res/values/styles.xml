<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/accent</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:colorBackground">@color/background_color</item>
    </style>
    <style name="CustomTextStyle">
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <style name="font_style">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="buttonFontColour">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">#d6000000</item>
        <item name="sv_showcaseColor">@color/primary_dark</item>
        <item name="sv_buttonText">OK, merci</item>
        <item name="sv_detailTextAppearance">@style/CustomShowcastText</item>
    </style>

    <style name="CustomShowcastText" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#8affffff</item>
        <item name="android:textSize">25dp</item>
    </style>



</resources>